<UserControl x:Class="IntelOrca.Biohazard.HitScan.WpPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntelOrca.Biohazard.HitScan"
             mc:Ignorable="d" 
             d:DesignWidth="256"
             d:DesignHeight="256">
    <Border>
        <Border.Background>
            <DrawingBrush TileMode="Tile" Viewport="0,0,32,32" ViewportUnits="Absolute">
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                        <!-- Vertical Line -->
                        <GeometryDrawing Brush="LightGray">
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry Rect="0,0,1,32"/>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>

                        <!-- Horizontal Line -->
                        <GeometryDrawing Brush="LightGray">
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry Rect="0,0,32,1"/>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </Border.Background>
        <Grid x:Name="grid" />
    </Border>
</UserControl>
