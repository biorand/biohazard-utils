<UserControl x:Class="IntelOrca.Biohazard.HitScan.PreviewLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntelOrca.Biohazard.BioRand"
             mc:Ignorable="d" d:DesignWidth="200" Height="16" VerticalAlignment="Top"
             x:Name="root">
    <UserControl.Resources>
        <DrawingBrush x:Key="DottedBrush" TileMode="Tile" Viewport="0,0,4,1" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <!-- Foreground line -->
                    <GeometryDrawing Brush="{Binding Foreground, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,2,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <!-- Transparent spacer -->
                    <GeometryDrawing Brush="Transparent">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="2,0,2,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </UserControl.Resources>
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="text" Grid.Column="0" Text="{Binding DisplayText, ElementName=root}" FontSize="8" Margin="2,0,4,0" VerticalAlignment="Center" />
        <Rectangle x:Name="line" Grid.Column="1" Height="1" Margin="0,2,0,0" Fill="{StaticResource DottedBrush}" />
    </Grid>
</UserControl>
